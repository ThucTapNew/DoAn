@model IEnumerable<QuanLiKho.Models.Entities.PhieuThuChi>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaPH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaHD)
        </th>
        <th>
            Nhà Cung Cấp
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThoiGian)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoaDon.TongTien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaPH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoaDon.DoiTac.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoaDon.TongTien)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.MaPH })
            </td>
        </tr>
    }

</table>
